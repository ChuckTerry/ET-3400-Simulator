{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "accessor-pairs": [
            "error",
            {
                "getWithoutSet": true,
                "setWithoutGet": true
            }
        ],
        
        "indent": [
            "error",
            2
        ],
        "yoda": [
            "error",
            "always"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "constructor-super": [
            "error",
            "always"
        ]
    }
}
